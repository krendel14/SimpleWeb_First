<html lang="eng">
<body>
    <div>
        <form method="post">
            <input type="text" name="name" placeholder="Insert user"/>
            <input type="text" name="email" placeholder="Email">
            <button type="submit">Add</button>
        </form>
    </div>

    <div>
        Users list
    </div>
    <form method="post" action="filter">
        <input type="text" name="filter">
        <button type="submit">Find</button>
    </form>

    {{#users}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
        <i>{{email}}</i>
    </div>
    {{/users}}

</body>
</html>